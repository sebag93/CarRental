@model CarRental.Models.CarViewModel

@{
    ViewBag.Title = "Car";
}

<div class="row">
    <div class="col-md-6">
        <div class="obrazek">
            <img src="~/Files/car.jpg" width="500" />
        </div>
    </div>
    <div class="col-md-5">
        <div class="form-horizontal">
            <h2>@Html.LabelFor(m => m.CarName)</h2>
            <div class="form-group">
                @Html.LabelFor(m => m.FuelType, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.LabelFor(m => m.FuelType, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Transmission, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.LabelFor(m => m.Transmission, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConsumptionCombined, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.LabelFor(m => m.ConsumptionCombined, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.AirConditioning, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.LabelFor(m => m.AirConditioning, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DriveType, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.LabelFor(m => m.DriveType, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LuggageCapacity, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.LabelFor(m => m.LuggageCapacity, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>
<hr />